#include <stdio.h>
#include <stdlib.h>
#include "pila.h"
void ingresar_elementos(Pila *);
void pasar_a_aux(Pila *origen, Pila *destino);
void pasar_en_orden(Pila *origen,Pila *aux, Pila *destino);
main()
{
	Pila origen,destino,aux;
	inicpila(&origen);
	inicpila(&aux);
	inicpila(&destino);
	ingresar_elementos(&origen);
	pasar_en_orden(&origen,&aux,&destino);
	mostrar(&destino);
	system("pause");
	return(0);
}
//Declaracion de funciones...
//
void ingresar_elementos(Pila *origen)
{
	int op;
	do
	{
		op=0;
		leer(origen);
		printf("Â¿Desea seguir ingresando elementos? (elija la opcion numerica):\n ");
		printf("1-SI \n 2-NO \n");
		scanf("%d",&op);
	}while(op==1);
}
//
//
void pasar_a_aux(Pila *origen,Pila *aux)
{
	while(!pilavacia(origen))
	{
		apilar(aux, desapilar(origen));
	}
}
//
//
void pasar_en_orden(Pila *origen, Pila *aux, Pila *destino)
{
	pasar_a_aux(origen,aux);
	while (!pilavacia(aux))
	{
		apilar(destino, desapilar(aux));
	}
}
